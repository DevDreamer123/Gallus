<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/leeftwo_removebg"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/user_name_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:textColorHint="#808080"
            android:backgroundTint="#808080"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/baseline_person_24_yellow"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/mobile_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter mobile"
            android:textColorHint="#808080"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_call_24"
            android:backgroundTint="#808080"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/email_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email id"
            android:textColorHint="#808080"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:backgroundTint="#808080"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/address_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter address"
            android:textColorHint="#808080"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:backgroundTint="#808080"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/area_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Area"
            android:textColorHint="#808080"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:backgroundTint="#808080"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/city_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter city"
            android:textColorHint="#808080"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:backgroundTint="#808080"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/date_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter date"
            android:textColorHint="#808080"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:backgroundTint="#808080"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/password_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            android:textColorHint="#808080"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_key_24_yellow"
            android:backgroundTint="#808080"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign_up"
            android:layout_marginRight="20dp"
            android:backgroundTint="#FFD119"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to"
                android:textSize="15dp"
                android:textColor="#808080" />
            <TextView
                android:id="@+id/sign_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sing in"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textColor="#FFD119"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/chicklogin_removebg"/>
        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>