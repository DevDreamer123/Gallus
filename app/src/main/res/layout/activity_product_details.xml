<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product/Service Details"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_10sdp" />

        <!-- Product Descriptions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Product Descriptions:"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here you can provide a detailed description of your products or services. Include key features, benefits, and any other relevant information."
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Example Product 1: Description of product 1."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Example Product 2: Description of product 2."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_15sdp" />

        <!-- Pricing Structure -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Pricing Structure:"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provide details about pricing plans or structures for your products or services."
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Basic Plan: Description and pricing of the basic plan."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Premium Plan: Description and pricing of the premium plan."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_15sdp" />

        <!-- Delivery and Shipping Policy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Delivery and Shipping Policy:"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outline your policies regarding delivery and shipping of products."
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Delivery Time: Information on delivery timeframes."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Shipping Costs: Details about shipping costs."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_15sdp" />

        <!-- Refund and Cancellation Policy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Refund and Cancellation Policy:"
            android:textSize="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Provide information on how refunds and cancellations are handled."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Refund Policy: Information on the process for requesting a refund."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Cancellation Policy: Details on how cancellations are managed."
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

    </LinearLayout>

</ScrollView>