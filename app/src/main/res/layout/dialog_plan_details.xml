<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <TextView
        android:id="@+id/popupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Confirmation"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/planName"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:text="Plan Name: Monthly Subscription"
        android:textSize="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/planDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Duration: 1 Month"
        android:textSize="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/planPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: ₹499"
        android:textSize="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/planFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Features:\n- Unlimited Access\n- 24/7 Support\n- No Ads"
        android:textSize="@dimen/_13sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Payment Details:"
        android:textSize="@dimen/_13sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/paymentDetails"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Total Amount: ₹ "
        android:textSize="@dimen/_13sdp"/>

        <TextView
        android:id="@+id/paymentTotalDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textStyle="bold"
        android:textSize="@dimen/_13sdp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/couponCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Coupon Code"
        android:inputType="text"/>

    <CheckBox
        android:id="@+id/termsCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the Terms and Conditions"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/_10sdp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#FF0000"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:layout_marginStart="@dimen/_8sdp"/>
    </LinearLayout>
</LinearLayout>