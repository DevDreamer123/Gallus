<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="@dimen/_18sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp" />

        <!-- Effective Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effective Date: [Insert Date]"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="italic" />

        <!-- Information Collection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Information Collection:\nWe collect personal information such as your name, email address, and phone number when you use our app."
            android:textSize="@dimen/_13sdp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="@dimen/_5sdp" />

        <!-- Use of Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Use of Information:\nThe collected information is used to provide, maintain, and improve our services. We do not share your information with third parties unless required by law."
            android:textSize="@dimen/_13sdp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="@dimen/_5sdp" />

        <!-- Security -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Security:\nWe implement security measures to protect your data. However, no system is completely secure, and we cannot guarantee absolute security."
            android:textSize="@dimen/_13sdp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="@dimen/_5sdp" />

        <!-- Cookies -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Cookies:\nWe use cookies to enhance user experience and analyze app usage. You can manage your cookie preferences through your device settings."
            android:textSize="@dimen/_13sdp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="@dimen/_5sdp" />

        <!-- Changes to Privacy Policy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Changes to Privacy Policy:\nWe may update this policy from time to time. Continued use of the app constitutes acceptance of the updated policy."
            android:textSize="@dimen/_13sdp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="@dimen/_5sdp" />

        <!-- Contact Us -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Contact Us:\nFor any questions regarding this Privacy Policy, please contact us at help.gallus@gmail.com."
            android:textSize="@dimen/_13sdp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="@dimen/_5sdp" />

    </LinearLayout>
</LinearLayout>